.gallery-thumbnail-wrapper 
  height 150px

.gallery-thumbnail 
  width 100%
  height 130px
  background-size cover
  box-shadow #666 0px 0px 4px
  transition 0.5s
  &:hover 
    cursor pointer
    box-shadow #666 0px 0px 15px
    transform scale(1.1)

/* Lightbox Background */
.lightbox 
  position fixed 
  z-index 1 
  left 0
  top 0
  width 100% 
  height 100% 
  display none
  overflow auto 
  background-color rgba(0,0,0,0.8) 
  &:hover 
    cursor pointer

/* Photo */
.gallery-photo 
  margin auto
  display block
  max-height 95%
  max-width 95%
  &:hover 
    cursor auto

/* 关闭按钮 */
.close-gallery 
  position absolute
  top 15px
  right 35px
  color #f1f1f1
  font-size 40px
  font-weight bold
  transition 0.3s
  &:hover, &:focus 
    color #bbb
    text-decoration none
    cursor pointer