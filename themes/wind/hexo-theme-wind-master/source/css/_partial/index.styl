@import "common"
@import "animation"
@import "variables"
.index-wrapper 
  margin 30px 0
  animation fadeIn 1s
.index-post-wrapper 
  position relative
  width 100%
  height 150px
  margin 0 0 130px 0
.index-post-info 
  width 100%
  display none
.index-post-title 
  display block
  width 100%
  font-family $font-default
  font-size 1.8em
  &:hover 
    text-decoration none     
.index-post-meta 
  float right
  margin 7px auto
.index-post-time 
  margin 0 10px 0 0